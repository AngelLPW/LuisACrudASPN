@model CrudASPN.Models.Contacto
@{
    ViewData["Title"] = "Eliminar de contacto";
}

<h1 class="text-center">Contactos en INA Upala ASP.Net Core</h1>

<div class="row">
    <div class="offser-12">
        <div class="card border">
            <div class="card-header bg-dark">
                <h3 class="text-white"><strong>Borrar CONTACTOS</strong> </h3>


            </div>
            <div class="card-body">
                <form asp-action="EliminarContacto" asp-route-id="@Model.ID" method="post">

                    @*ID de l Usuairo de manera*@
                    <input type="hidden" asp-for="ID" />
                    <div class="text-danger" asp-validation-summary="ModelOnly"></div>

                    <div class=" form-group">
                        <label asp-for="Nombre" class="control-label"></label>
                        <input asp-for="Nombre" class="form-control border border-success" placeholder="Ingresa el nombre" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>

                    <div class=" form-group">
                        <label asp-for="Telefono" class="control-label"></label>
                        <label asp-for="Telefono" class="control-label"></label>
                        <input asp-for="Telefono" class="form-control border border-success" placeholder="Ingresa el numero telefonico" />
                        <span asp-validation-for="Telefono" class="text-danger"></span>
                    </div>

                    <div class=" form-group">
                        <label asp-for="Celular" class="control-label"></label>
                        <input asp-for="Celular" class="form-control  border border-success" placeholder="Ingresa el numero de ceular" />
                        <span asp-validation-for="Celular" class="text-danger"></span>
                    </div>

                    <div class=" form-group">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control border border-success" placeholder="Ingresa el Email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-3">
                        <button type="submit" class="btn btn-outline-danger d-block mx-auto">
                            <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-person-fill-x" viewBox="0 0 16 16">
                                <path d="M11 5a3 3 0 1 1-6 0 3 3 0 0 1 6 0Zm-9 8c0 1 1 1 1 1h5.256A4.493 4.493 0 0 1 8 12.5a4.49 4.49 0 0 1 1.544-3.393C9.077 9.038 8.564 9 8 9c-5 0-6 3-6 4Z" />
                                <path d="M12.5 16a3.5 3.5 0 1 0 0-7 3.5 3.5 0 0 0 0 7Zm-.646-4.854.646.647.646-.647a.5.5 0 0 1 .708.708l-.647.646.647.646a.5.5 0 0 1-.708.708l-.646-.647-.646.647a.5.5 0 0 1-.708-.708l.647-.646-.647-.646a.5.5 0 0 1 .708-.708Z" />
                            </svg>Borrar Usuario
                        </button>
                    </div>
                </form>
                <a asp-controller="Inicio" asp-action="Index"><i class="bi bi-chevron-double-left"></i>Regresar</a>
            </div>

        </div>
    </div>
</div>


